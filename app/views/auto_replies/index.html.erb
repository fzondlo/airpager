<div class="max-w-5xl mx-auto py-10 px-6">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-slate-800">Auto Replies</h1>
    <div>
      <%= link_to "Chat sandbox", sandbox_auto_replies_path, class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-xl text-sm font-medium transition" %>
      <%= link_to "New Auto Reply", new_auto_reply_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-xl text-sm font-medium transition" %>
    </div>
  </div>

  <div class="overflow-x-auto bg-white shadow-md rounded-xl">
    <table class="min-w-full table-auto text-sm text-left text-slate-700">
      <thead class="bg-slate-100 text-slate-600 uppercase text-xs">
        <tr>
          <th class="px-6 py-3">Question</th>
          <th class="px-6 py-3">Answer</th>
          <th class="px-6 py-3 text-right">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @auto_replies.each do |auto_reply| %>
          <tr class="border-t hover:bg-slate-50">
            <td class="px-6 py-4 font-medium text-slate-800">
              <%= auto_reply.trigger %>
              <br/>
              <span class="text-xs font-light"><%= auto_reply.property_names_display %></span>
            </td>
            <td class="px-6 py-4"><%= truncate(auto_reply.reply, length: 120) %></td>
            <td class="px-6 py-4 text-right space-x-2">
              <%= link_to "Show", auto_reply_path(auto_reply.model), class: "text-blue-600 hover:underline" %>
              <%= link_to "Edit", edit_auto_reply_path(auto_reply.model), class: "text-yellow-600 hover:underline" %>
              <%= button_to "Delete", auto_reply_path(auto_reply.model), method: :delete, data: { turbo_confirm: "Are you sure?" }, form: { class: 'inline' }, class: "text-red-600 hover:underline cursor-pointer" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
