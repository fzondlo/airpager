<div class="max-w-5xl mx-auto py-8 px-6">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Property #<%= @property.id %></h1>

  <div class="space-y-4 bg-white shadow rounded-xl p-6 border border-gray-200">

    <div>
      <h2 class="text-sm font-semibold text-gray-500 uppercase">Name</h2>
      <p class="text-lg text-gray-800 bg-gray-100 p-4"><%= @property.name %></p>
    </div>

    <div>
      <h2 class="text-sm font-semibold text-gray-500 uppercase">Slug</h2>
      <p class="text-lg text-gray-800 bg-gray-100 p-4"><%= @property.slug %></p>
    </div>

    <div>
      <h2 class="text-sm font-semibold text-gray-500 uppercase">Clickup custom field ID</h2>
      <p class="text-lg text-gray-800 bg-gray-100 p-4"><%= @property.clickup_custom_field_id %></p>
    </div>

    <div>
      <h2 class="text-sm font-semibold text-gray-500 uppercase">Hospitable ID</h2>
      <p class="text-lg text-gray-800 bg-gray-100 p-4"><%= @property.hospitable_id %></p>
    </div>

    <div>
      <h2 class="text-sm font-semibold text-gray-500 uppercase">Created At</h2>
      <p class="text-lg text-gray-800 bg-gray-100 p-4"><%= @property.created_at.in_time_zone("America/Bogota").strftime("%B %-d, %Y â€“ %H:%M") %></p>
    </div>

    <div>
      <h2 class="text-sm font-semibold text-gray-500 uppercase">Hospitable metadata</h2>
      <pre class="whitespace-pre-wrap break-words text-sm bg-gray-100 text-gray-800 font-mono rounded-md p-4 overflow-x-auto"><code><%= JSON.pretty_generate(@property.hospitable_metadata) %></code></pre>
    </div>

  </div>

  <div class="mt-8 flex justify-between items-center">
    <%= link_to "Back to list", properties_path, class: "text-gray-500 hover:underline text-sm" %>
  </div>
</div>
